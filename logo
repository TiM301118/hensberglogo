    <div class="export-options">
        <button class="export-btn" onclick="exportAsPNG()">Als PNG exportieren</button>
        <button class="export-btn" onclick="toggleBackground()">Hintergrund ändern</button>
    </div>

    <script>
        let bgToggle = false;

        function toggleBackground() {
            bgToggle = !bgToggle;
            const logo = document.getElementById('logo');
            if (bgToggle) {
                logo.style.background = 'transparent';
                logo.style.boxShadow = 'none';
            } else {
                logo.style.background = 'linear-gradient(145deg, #1e1e2e, #2a2a3e)';
                logo.style.boxShadow = '0 0 60px rgba(255, 94, 0, 0.5), 0 0 100px rgba(255, 94, 0, 0.2), inset 0 0 20px rgba(255, 94, 0, 0.1)';
            }
        }

        function exportAsPNG() {
            // Diese Funktion würde normalerweise html2canvas oder eine ähnliche Bibliothek verwenden
            // Da wir in dieser Umgebung begrenzt sind, zeigen wir eine Anleitung
            alert('Um das Logo als PNG zu exportieren:\n\n1. Mache einen Screenshot des Logos\n2. Oder kopiere den HTML-Code und nutze einen Online HTML-zu-PNG Konverter\n3. Alternativ: Rechtsklick auf das Logo und "Bild speichern unter..." (in manchen Browsern)');
        }

        // Interaktive Hover-Effekte
        const logo = document.getElementById('logo');
        logo.addEventListener('mousemove', (e) => {
            const rect = logo.getBoundingClientRect();
            const x = e.clientX - rect.left;
            const y = e.clientY - rect.top;
            
            const centerX = rect.width / 2;
            const centerY = rect.height / 2;
            
            const angleX = (y - centerY) / 30;
            const angleY = (centerX - x) / 30;
            
            logo.style.transform = `perspective(1000px) rotateX(${angleX}deg) rotateY(${angleY}deg)`;
        });

        logo.addEventListener('mouseleave', () => {
            logo.style.transform = 'perspective(1000px) rotateX(0) rotateY(0)';
        });
    </script>
</body>
</html>
